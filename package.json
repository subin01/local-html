{
  "name": "local-html",
  "version": "0.0.0",
  "description": "Simple Local HTML server for AEM Projects. uses express-ssi",
  "main": "index.js",
  "scripts": {
    "start": "node server",
    "build-css":
      "node-sass pages/styles/ --output pages/css/ --source-map-embed --output-style expanded --source-comments",
    "watch-css": "nodemon --ext scss,sass,js,html  -x 'npm run build-css'"
  },
  "author": "Subin Paul",
  "dependencies": {
    "express": "^3.4.8",
    "node-sass": "^4.9.0",
    "ssi": "^0.1.3"
  }
}
